version: '3'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile.development
    env_file:
      - .env.development
    networks:
      - app
    ports:
      - 127.0.0.1:${APP_PORT-3000}:3000
    volumes:
      - .:/app
    depends_on:
      - db

  db:
    image: postgres:12
    env_file:
      - .env.development
    networks:
      - app
    ports:
      - 127.0.0.1:${PG_PORT-5432}:5432
    volumes:
      - db:/var/lib/postgresql/data

networks:
  app:

volumes:
  db:
